    <link href="css/style.css" rel="stylesheet">
    <style>
      body {
        background-image: url('img/bg3.webp');
        background-repeat: no-repeat;
        background-attachment: fixed;  
        background-size: cover;
        background-size: 100% 100%;
      }
      
      </style>
</head>

<body>

  <!-- Section: Design Block -->
  <section class="text-center text-lg-start">
    <style>
      .cascading-right {
        margin-right: -50px;
      }

      @media (max-width: 991.98px) {
        .cascading-right {
          margin-right: 0;
        }
      }
    </style>

    <!-- Jumbotron -->
    <div class="container py-4">
      <div class="row g-0 align-items-center justify-content-center">
        <div class="col-lg-6">
          <div class="card cascading-right" style="
            background: hsla(283, 23%, 94%, 0.55);
            backdrop-filter: blur(40px);
            ">
            <div class="card-body p-5 shadow-5 text-center ">
              <h3 class="p-4"><i class=" text-dark mr-2"></i><a href="/"
                  class="text-decoration-none font-weight-bolder text-primary"
                  style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; font-weight: bolder;">E-Shopper</a>
              </h3>
              <form action="/register" method="post">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input type="text" name="fname" id="form3Example1" style="border-radius: 25px;" class="form-control" placeholder="First Name"
                        required />
                      <!-- <label class="form-label" for="form3Example1">First name</label> -->
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input type="text" name="lname" id="form3Example2" class="form-control" style="border-radius: 25px;" placeholder="Last Name"
                        required />
                      <!-- <label class="form-label" for="form3Example2">Last name</label> -->
                    </div>
                  </div>
                </div>

                <!-- Email input -->
                <div class="form-outline mb-4">
                  <input type="email" name="email" style="border-radius: 25px;" id="form3Example3" class="form-control" placeholder="Email address"
                    required />
                  <!-- <label class="form-label" for="form3Example3">Email address</label> -->
                </div>

                <!-- Mobile input -->
                <div class="form-outline mb-4">
                  <input type="text" name="mno" style="border-radius: 25px;" id="form3Example3" class="form-control" placeholder="Mobile Number"
                    required />
                  <!-- <label class="form-label" for="form3Example3">Mobile Number</label> -->
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                  <input type="password" name="password" style="border-radius: 25px;" id="form3Example4" class="form-control" placeholder="Password"
                    required />
                  <!-- <label class="form-label" for="form3Example4">Password</label> -->
                </div>

                <div class="form-outline mb-4">
                  <input type="password" name="repassword" style="border-radius: 25px;" id="form3Example4" class="form-control" placeholder="Repeat Password"
                    required />
                  <!-- <label class="form-label" for="form3Example4">Password</label> -->
                </div>

                <!-- Checkbox -->
                <div class="form-check d-flex justify-content-center mb-4">
                  <input class="form-check-input mt-4" type="checkbox" value="" id="form2Example33" checked />
                  <label class="form-check-label" for="form2Example33">
                   Sign Up to our newsletter
                  </label>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">
                  Sign up
                </button>
                <% if(typeof message !=='undefined' ){ %>
                  <h5 style=" font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;text-align: center;" class="text-danger">
                    <%= message %>
                  </h5>
                  <% } %>

              </form>
            </div>
          </div>
        </div>

        <!-- <div class="col-lg-6 mb-5 mb-lg-0">
          <img
            src="./img/register1.jpg"
            class="w-100 rounded-4 shadow-4" alt="" />
        </div> -->
      </div>
    </div>
    <!-- Jumbotron -->
  </section>
  <!-- Section: Design Block -->
</body>

</html>
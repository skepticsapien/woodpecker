<body>
  <form class="p-5" action="/admin">
    <button type="submit" style="background-color: #b3d1d9;" class="btn"> GO Back</button>
    </form>
  <div class="container mt-4 col-lg-5">
    <div class="ml-auto pb-5">
      <h3>Add Categories</h3>
      <form action="/admin/addcategory" method="post">
        <input name="category" type="text" placeholder="Add Category">
        <button type="submit">Add</button>
      </form>
    </div>
    <table class="table" id="myTable">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Category</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            <% if(category.length>0) {
                for(let i=1;i<=category.length;i++){ %>
          <tr>
            <th scope="row"><%=i %></th>
            <td><%=category[i-1].categories%></td>
            <form action="/admin/delcategory?id=<%=category[i-1]._id %>" method="post">
                <td><button type="submit" class="btn-primary">Delete</button></td>
            </form>
          </tr>
          <% }}%>
        </tbody>
      </table>
      <script>
        $(document).ready(function() {
        $('#myTable').DataTable( {
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        } );
    } )
        </script>

</body>
